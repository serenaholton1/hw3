<div class="entry-card">
  <h1>New Entry for <%= @place&.name %></h1>
  <p class="entry-subtitle">Capture a memory while it is fresh.</p>

  <%= form_with url: "/entries", method: :post, scope: nil, local: true do |form| %>
    <%= form.hidden_field :place_id, value: @place&.id %>

    <div class="field">
      <%= form.label :title, "Title", for: "title_input" %>
      <%= form.text_field :title, id: "title_input", placeholder: "Sunset walk, best gelato ever..." %>
    </div>

    <div class="field">
      <%= form.label :occurred_on, "Occurred on", for: "occurred_on_input" %>
      <%= form.date_field :occurred_on, id: "occurred_on_input" %>
    </div>

    <div class="field">
      <%= form.label :description, "Description", for: "description_input" %>
      <%= form.text_area :description, id: "description_input", rows: 6, placeholder: "What happened? Who was there? Tiny details you'll want to remember..." %>
    </div>

    <%= form.submit "Create entry" %>
  <% end %>
</div>
