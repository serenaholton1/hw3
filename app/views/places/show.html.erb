<h1><%= @place&.name %></h1>

<p>
  <a href="/entries/new?place_id=<%= @place&.id %>">Add a new entry</a>
</p>

<h2>Entries</h2>

<% if @entries.any? %>
  <ul>
    <% @entries.each do |entry| %>
      <li>
        <p><strong><%= entry.title %></strong></p>
        <p><%= entry.occurred_on %></p>
        <p><%= entry.description %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No entries yet.</p>
<% end %>
